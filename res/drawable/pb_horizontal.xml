<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="15dip" />

            <gradient
                android:angle="270"
                android:centerColor="#fdfdfd"
                android:centerY="0.75"
                android:endColor="#f9f9f9"
                android:startColor="#f9f9f9" />

            <stroke
                android:width="1dp"
                android:color="#cacbc3" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="20dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#7b9937"
                    android:centerY="0.9"
                    android:endColor="#7b9937"
                    android:startColor="#7b9937" />

                <stroke
                    android:width="1dp"
                    android:color="#98a171" />
            </shape>
        </clip>
    </item>

</layer-list>