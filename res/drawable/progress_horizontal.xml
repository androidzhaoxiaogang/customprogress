<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> 
     
    <item android:id="@android:id/background"> 
        <shape> 
            <corners android:radius="5dip" /> 
            <gradient 
                    android:startColor="#b2b2b2" 
                    android:centerColor="#b2b2b2" 
                    android:centerY="0.1" 
                    android:endColor="#b2b2b2" 
                    android:angle="270" 
            /> 
        </shape> 
    </item> 
     
    <item android:id="@android:id/progress"> 
        <clip> 
            <shape> 
                <corners android:radius="5dip" /> 
                <gradient 
                        android:startColor="#717171" 
                        android:centerColor="#717171" 
                        android:centerY="0.9" 
                        android:endColor="#717171" 
                        android:angle="270" 
                /> 
            </shape> 
        </clip> 
    </item> 
     
</layer-list> 